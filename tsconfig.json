{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": true,
      "noEmit": false,
      "target": "es6",
      "module": "es6",
      "esModuleInterop": true,
      "outDir": "dist",
      
      "moduleResolution": "node",
      // TBD it is desired to enabled strict type checking at some point:
      "strict": false,
      "typeRoots": ["./types", "./node_modules/@types"]
    }
}